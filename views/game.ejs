<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Anime Game</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="styles.css">
  </head>
  <body>
  <h1>How well do you know your anime?</h1>
  <div class="game">
  <div class="image">
    <%if(imageSrc !== undefined){%>
    <img style = 'width: 20%; height: 20%' src= <%= imageSrc %> alt="Anime Image">
  <% } else{ %>
    <p><%=src%></p>
  <% } %>
  </div>
  <table class = "answerChoices">
    <form action="/game" method="post">
      <div class="row">
        <div class= "col-12 col-lg-6 button">
          <button class = "btn btn-light btn-lg"type="submit" name="button" value = <%= val1 %> ><%= answer1 %></button>
        </div>
        <div class="col-12 col-lg-6 button">
          <button class = "btn btn-light btn-lg"type="submit" name="button" value = <%= val2 %> ><%= answer2 %></button>
        </div>
      </div>
      <div class="row">
        <div class= "col-12 col-lg-6 button">
          <button class = "btn btn-light btn-lg"type="submit" name="button" value = <%= val3 %> ><%= answer3 %></button>
        </div>
        <div class="col-12 col-lg-6 button">
          <button class = "btn btn-light btn-lg"type="submit" name="button" value = <%= val4 %> ><%= answer4 %></button>
        </div>
      </div>
    </form>
  </table>
</div>
  <script src="extra-game.js" charset="utf-8"></script>
  </body>

</html>
